{% extends "base.html.twig" %}

{% block title %}Tableau de bord &middot; {{ parent() }}{% endblock %}

{% block body %}

    <div class="container">
        <h1>Modifier mes informations</h1>
        <div class="col-md-6 mx-auto my-5">
            <form action="{{ path('profile_update') }}" method="post">
                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Changer le nom d'utilisateur</label>
                    <input type="text" name="username" class="form-control" id="usernameInput" placeholder="{{ isAuthenticated() ? user() }}">
                </div>
                <div class="mb-3">
                    <label for="emailInput" class="form-label">Changer l'adresse email</label>
                    <input type="email" name="email" class="form-control" id="emailInput" placeholder="{{ isAuthenticated() ? user().email }}">
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <label for="inputNewPassword" class="form-label">Nouveau mot de passe</label>
                            <input type="password" name="newPassword" id="inputNewPassword" class="form-control" aria-describedby="passwordHelpBlock" maxlength="50" placeholder="Nouveau mot de passe">
                        </div>
                        <div class="col">
                            <label for="inputNewPasswordConfirm" class="form-label">Confirmer le nouveau mot de passe</label>
                            <input type="password" name="newPasswordConfirm" id="inputNewPasswordConfirm" class="form-control" maxlength="50" placeholder="Nouveau mot de passe">
                        </div>
                    </div>
                    <div id="passwordHelpBlock" class="form-text text-secondary">
                        Votre mot de passe ne doit pas dépasser 50 caractères maximum.
                    </div>
                </div>
                <div class="mt-4 mb-3">
                    <label for="inputPassword" class="form-label">Mot de passe *</label>
                    <input name="password" type="password" class="form-control" aria-describedby="passwordHelp" id="inputPassword" placeholder="Mot de passe" required>
                    <div id="passwordHelp" class="form-text text-secondary">
                        * Votre mot de passe est obligatoire pour valider la modification de votre profil.
                    </div>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-secondary px-4">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
