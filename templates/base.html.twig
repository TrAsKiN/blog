<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Blog{% endblock %}</title>
        {% block stylesheet %}
        <link href="https://fonts.googleapis.com/css?family=Playfair&#43;Display:700,900&amp;display=swap" rel="stylesheet">
        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/blog.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <header class="blog-header lh-1 py-3 mb-2">
                <div class="row flex-nowrap justify-content-between align-items-center">
                    <div class="col-4">
                        <a class="blog-header-logo text-light" href="{{ path('home') }}">Blog</a>
                    </div>
                    {% if not isAuthenticated() %}
                        <div class="col-4 d-flex justify-content-end align-items-center">
                            <a class="btn btn-sm btn-outline-secondary" href="{{ path('login') }}">Connexion</a>
                        </div>
                    {% else %}
                        <div class="col-4 d-flex justify-content-end align-items-center">
                            {% if hasRole('admin') %}
                            <a href="#" class="btn btn-sm btn-link link-secondary me-1">Administration</a>
                            {% endif %}
                            <a class="btn btn-sm btn-outline-secondary" href="{{ path('logout') }}">Déconnexion</a>
                        </div>
                    {% endif %}
                </div>
            </header>
        </div>
        <main class="container">
            {% for type, message in flash() %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {% endfor %}
            {% block body %}{% endblock %}
        </main>
        <div class="container">
            <footer class="row row-cols-1 row-cols-sm-2 row-cols-md-5 py-4 my-4">
                <div class="col mb-3">
                    <p class="text-secondary">MARCHAL&nbsp;Simon &copy; 2022</p>
                </div>
                <div class="col mb-3"></div>
                <div class="col mb-3">
                    <h5>Derniers articles</h5>
                    <ul class="nav flex-column">
                        {% set posts = lastPosts(4) %}
                        {% for post in posts %}
                            <li class="nav-item mb-2"><a href="{{ path('post', {'slug': post.slug}) }}" class="nav-link p-0 link-secondary">{{ post.title }}</a></li>
                        {% else %}
                            <li class="nav-item mb-2 text-secondary">Aucun article</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col mb-3">
                    <h5>Informations</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 link-secondary">Mentions légales</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 link-secondary">Données personnelles</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 link-secondary">Contact</a></li>
                        <li class="nav-item mb-2"><a href="/cv.pdf" class="nav-link p-0 link-secondary">CV</a></li>
                    </ul>
                </div>
                <div class="col mb-3">
                    <h5>Réseaux sociaux</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="https://twitter.com/notTrAsKiN" target="_blank" class="nav-link p-0 link-secondary">Twitter</a></li>
                        <li class="nav-item mb-2"><a href="https://github.com/TrAsKiN" target="_blank" class="nav-link p-0 link-secondary">GitHub</a></li>
                        <li class="nav-item mb-2"><a href="https://www.linkedin.com/in/marchal-simon/" target="_blank" class="nav-link p-0 link-secondary">LinkedIn</a></li>
                    </ul>
                </div>
            </footer>
        </div>
        {% block javascript %}
        <script src="/js/bootstrap.bundle.min.js"></script>
        {% endblock %}
    </body>
</html>
