{% extends "base.html.twig" %}

{% block title %}Création de compte &middot; {{ parent() }}{% endblock %}

{% block body %}

    <div class="container">
        <h1>Création de compte</h1>
        <div class="col-lg-8 col-xl-6 mx-auto my-5">
            <form method="post" action="{{ path('register') }}">
                <div class="mb-4">
                    <div class="row">
                        <div class="col-md mb-4 mb-md-0">
                            <label for="inputEmail" class="form-label">Adresse email</label>
                            <input type="email" name="email" class="form-control" placeholder="nom@exemple.fr" id="inputEmail" value="{{ form.email ?? '' }}">
                        </div>
                        <div class="col-md">
                            <label for="inputUsername" class="form-label">Nom d'utilisateur</label>
                            <input type="text" name="username" class="form-control" placeholder="Jean" id="inputUsername" value="{{ form.username ?? '' }}">
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="row">
                        <div class="col-md mb-4 mb-md-0">
                            <label for="inputPassword" class="form-label">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" aria-describedby="passwordHelpBlock" maxlength="50">
                        </div>
                        <div class="col-md">
                            <label for="inputPasswordConfirm" class="form-label">Confirmer le mot de passe</label>
                            <input type="password" name="passwordConfirm" id="inputPasswordConfirm" class="form-control" maxlength="50">
                        </div>
                    </div>
                    <div id="passwordHelpBlock" class="form-text text-secondary">
                        Votre mot de passe ne doit pas dépasser 50 caractères maximum.
                    </div>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-secondary">Valider</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
