{% extends "base.html.twig" %}

{% block title %}Changement de mot de passe &middot; {{ parent() }}{% endblock %}

{% block body %}

    <h1>Changement de mot de passe</h1>
    <div class="col-md-6 mx-auto my-5">
        <form method="post" action="{{ path('password', {'token': token}) }}">
            <div class="mb-4">
                <div class="row">
                    <div class="col">
                        <label for="inputPassword" class="form-label">Nouveau mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" aria-describedby="passwordHelpBlock" maxlength="50">
                    </div>
                    <div class="col">
                        <label for="inputPasswordConfirm" class="form-label">Confirmer le nouveau mot de passe</label>
                        <input type="password" name="passwordConfirm" id="inputPasswordConfirm" class="form-control" maxlength="50">
                    </div>
                </div>
                <div id="passwordHelpBlock" class="form-text text-secondary">
                    Votre mot de passe ne doit pas dépasser 50 caractères maximum.
                </div>
            </div>
            <div class="my-4">
                <button type="submit" class="btn btn-secondary">Valider</button>
            </div>
        </form>
    </div>

{% endblock %}
