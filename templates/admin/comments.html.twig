{% extends "base.html.twig" %}

{% block title %}Liste des commentaires à valider &middot; {{ parent() }}{% endblock %}

{% block body %}

    <div class="container">
        <h1>Liste des commentaires à valider</h1>
        <table class="table table-dark table-striped table-hover table-borderless">
            <thead>
                <tr>
                    <th scope="col" class="col-2">Article</th>
                    <th scope="col" class="col-6">Commentaire</th>
                    <th scope="col" class="col-2">Auteur</th>
                    <th scope="col" class="col-2"></th>
                </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                <tr>
                    <td>{{ comment.post.title }}</td>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.author }}</td>
                    <td class="text-end">
                        <a class="link-success p-1" href="{{ path('comment_valid', {'id': comment.id}) }}" title="Valider"><i class="bi bi-check-circle"></i></a>
                        <a class="link-danger p-1" href="{{ path('comment_invalid', {'id': comment.id}) }}" title="Supprimer"><i class="bi bi-dash-circle"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4" class="text-secondary fst-italic text-center">Aucun commentaire en attente de validation</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
